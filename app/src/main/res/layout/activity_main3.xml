<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main3Activity">
    <TextView
        android:id="@+id/txt_phim_atv3"
        android:text="Phim:"
        android:textColor="#931616"
        android:textSize="24dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="17dp"
        android:id="@+id/txt_mota_atv3"
        android:textColor="#C4A224"
        android:text="noi dung"
        app:layout_constraintTop_toBottomOf="@+id/txt_phim_atv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/youT_video_atv3"
        app:layout_constraintTop_toBottomOf="@+id/txt_mota_atv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.google.android.youtube.player.YouTubePlayerView>

</android.support.constraint.ConstraintLayout>