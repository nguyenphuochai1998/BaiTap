<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:padding="10dp"
        android:id="@+id/imageHinhPhim"
        android:layout_width="120dp"
        android:layout_height="120dp" />
    <TextView
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@+id/imageHinhPhim"
        android:id="@+id/txtPhim"
        android:text="Tên Phim:"
        android:textColor="#931616"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtMota"

        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPhim"
        android:text="Mô tả:"
        android:textSize="15dp"
        app:layout_constraintLeft_toRightOf="@+id/imageHinhPhim"
        app:layout_constraintTop_toBottomOf="@+id/txtPhim"
        android:textColor="#C4A224"
        />



</android.support.constraint.ConstraintLayout>